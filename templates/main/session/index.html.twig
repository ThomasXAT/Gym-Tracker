{% extends 'base.html.twig' %}
{% block body %}
        <section class="content container" {{ stimulus_controller('session') }}>
            <h2 id="athlete-username" hidden>{{ session.athlete.username }}</h2>
            <span hidden id="athlete-identifier">{{ session.athlete.id }}</span>
            <span hidden id="athlete-unit">{{ session.athlete.unit }}</span>
            <span hidden id="session-identifier">{{ session.id }}</span>
            <div class="row">
{% if session.current == false %}
                <section id="breadcrumb" class="mb-1 mb-md-2 p-2 mx-auto d-flex justify-content-end align-items-center">
                    <div class="col-3 text-white fw-bold fs-3">
                        <span class="d-md-none">{{ position }}</span>
                        <span class="d-none d-md-inline">{{ ('main.' ~ page ~ '.title')|trans ~ ' ' ~ position }}</span>
                    </div>
                    <div class="col-9 text-end text-truncate" aria-label="breadcrumb">
                        <span><a href="{{ path('profile', {'username': session.athlete.username}) }}" class="text-decoration-none">@{{ session.athlete.username }}</a></span>
                        <span class="mx-1"><i class="fa-solid fa-chevron-right"></i></span>
                        <span class="d-md-none"><a class="text-decoration-none" href="{{ path('sessions', { 'username': session.athlete.username }) }}">{{ 'main.sessions.title'|trans }}</a></span>
                        <span class="d-none d-md-inline"><a class="text-decoration-none" href="{{ path('sessions', { 'username': session.athlete.username }) }}">{{ 'main.sessions.full'|trans }}</a></span>                        
                        <span class="mx-1"><i class="fa-solid fa-chevron-right"></i></span>
                        <span class="d-md-none fw-bold">{{ position }}</span>
                        <span class="d-none d-md-inline fw-bold">{{ ('main.' ~ page ~ '.title')|trans ~ ' ' ~ position }}</span>
                    </div>
                </section>
{% endif %}
                <section id="session" class="mx-auto{% if session.current %} mt-2 mt-md-3{% endif %}">
                    <section class="mt-1 mt-md-2 mb-3 text-center">
                        <h3 class="text-white identifier">{{ session.title }}</h3>
                        <span><span>{{ 'main.session.at_date'|trans }}</span> <span class="text-white">{{ ('day.' ~ session.start|date('d'))|trans }} {{ ('month.' ~ session.start|date('m'))|trans }} {{ session.start|date('Y') }}</span> <span>{{ 'main.session.at_time'|trans }}</span> <span class="text-white">{{ session.start|date('H:i') }}</span></span>
                    </section>
                    <div id="loading" class="text-center">
                        <p class="py-5"><i class="fa-solid fa-syringe"></i> {{ 'loading'|trans }}...</p>
                    </div>
                    <div id="welcome" class="text-center" hidden>
                        <p class="py-5">{{ 'main.session.welcome'|trans }}</p>
                    </div>
                    <section id="session-muscles"></section>
                    <section id="session-exercices"></section>
{% if app.user == session.athlete and session.current == false %}
                    <div id="session-delete" class="text-center py-2 py-md-3 mb-2 mb-md-0" hidden>
                        <a href="{{ path('session_delete', { 'id': session.id }) }}"><button class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i> {{ 'main.session.delete'|trans }}</button></a>
                    </div>
{% endif %}
{% if session.current %}
{{ include('main/session/_edit.html.twig') }}
{{ include('main/session/_add.html.twig') }}
{{ include('main/session/_exercice.html.twig') }}
{% endif %}
                </section>
            </div>
        </section>
        <div id="error"></div>
{% endblock %}
            <aside id="_edit" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <header class="modal-header">
                            <p class="modal-title fs-5">{{ 'main.profile.edit.title'|trans }}</p>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </header>
                        <main class="modal-body">
                            {{ form_start(edit_form) }}
                                <label for="section-picture" class="form-label fw-bold">{{ 'athlete.picture'|trans }}</label>
                                <section id="section-picture" class="row mb-3">
                                    <div class="col-4 pe-1">
                                        <section id="section-view">
                                            <img id="profile_picture" width="100%" height="100%" class="profile-picture border p-1" src="{% if athlete.picture %}{{ asset(athlete.picture) }}{% else %}{{ asset('images/placeholder-athlete.jpg') }}{% endif %}">
                                        </section>
                                    </div>
                                    <div class="col-8 ps-1 d-flex align-items-center">
                                        <div>
                                            <section id="section-file">
                                                {{ form_widget(edit_form.file) }}
                                            </section>
                                            <p id="help-file" class="form-text text-danger"></p>
                                            <a id="delete_picture" class="text-nowrap text-decoration-none pointer-only px-1">{{ 'main.profile.edit.picture.delete'|trans }}</a>
                                        </div>
                                    </div>
                                </section> 
                                {{ form_widget(edit_form._delete_picture) }}
                                <label for="section-identity" class="form-label fw-bold">{{ 'main.profile.edit.identity.label'|trans }}</label>
                                <section id="section-identity" class="mx-auto">
                                    <section id="section-fullname" class="mb-3">
                                        <div class="d-flex">
                                            <section id="section-firstname" class="form-floating col-6 pe-1">
                                                {{ form_widget(edit_form.firstname) }}
                                                {{ form_label(edit_form.firstname) }}
                                            </section>
                                            <section id="section-surname" class="form-floating col-6 ms-1 pe-1">
                                                {{ form_widget(edit_form.surname) }}
                                                {{ form_label(edit_form.surname) }}
                                            </section>
                                        </div>
                                        <p id="help-fullname" class="form-text text-danger"></p>
                                    </section>
                                    <section id="section-email" class="form-floating mb-3">
                                        {{ form_widget(edit_form.email) }}
                                        {{ form_label(edit_form.email) }}
                                        <p id="help-email" class="form-text text-danger"></p>
                                    </section>
                                    <section id="section-password" class="form-floating mb-3">
                                        {{ form_widget(edit_form.password) }}
                                        {{ form_label(edit_form.password) }}
                                        <p id="help-password" class="form-text text-danger"></p>
                                    </section>
                                    <section id="section-confirmation" class="form-floating mb-3" hidden>
                                        {{ form_widget(edit_form.confirmation) }}
                                        {{ form_label(edit_form.confirmation) }}
                                        <p id="help-confirmation" class="form-text text-danger"></p>
                                    </section>
                                </section>
                                <label for="section-description" class="form-label fw-bold">{{ 'main.profile.edit.description.label'|trans }}</label>
                                <section id="section-description" class="form-group mb-2">
                                    {{ form_widget(edit_form.description) }}
                                </section>
                                <section id="section-quotation" class="form-floating">
                                    {{ form_widget(edit_form.quotation) }}
                                    {{ form_label(edit_form.quotation) }}
                                </section>
                                {{ form_widget(edit_form._token) }}
                            {{ form_end(edit_form) }}
                        </main>
                        <footer class="modal-footer">
                            <button id="profile_submit" class="btn btn-success" disabled><i class="fa-solid fa-pen-to-square"></i> {{ 'main.profile.edit.submit'|trans }}</button>
                        </div>
                    </div>
                </div>
            </aside>
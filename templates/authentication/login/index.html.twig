{% extends 'base.html.twig' %}
{% block body %}
        <section class="content container" {{ stimulus_controller('login') }}>
            <div id="title" class="text-center mb-3">
                <h2 id="authentication-title" class="text-white">{{ 'authentication.login.form'|trans }}</h2>
{% if error %}
                <span class="text-danger">{{ 'authentication.login.error'|trans }} <a class="text-decoration-none" href="#">{{ 'authentication.login.forgotten'|trans }}</a></span>
{% endif %}
            </div>   
{{ include('authentication/login/_form.html.twig') }}
            <div class="text-center">
                <a class="text-decoration-none" href="{{ path('authentication_register') }}">{{ 'authentication.login.register'|trans }}</a>
            </div>
        </section>
{% endblock %}